{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask-Windows",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${config:python.pythonPath}",
            "program": "${workspaceRoot}/run.py",
            "env": {
                "FLASK_APP": "${workspaceRoot}/app/__init__.py",
                "FLASK_DEBUG": "true"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ]
        },
        {
            "name": "Flask-Linux",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${config:python.pythonPath}",
            "program": "/usr/local/bin/flask",
            "env": {
                "FLASK_APP": "${workspaceRoot}/app/__init__.py",
                "FLASK_DEBUG": "true"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ]
        }        
    ]
}